{
    "name": "leinonen/yii2-algolia",
    "description": "Algolia bridge for Yii2",
    "type": "yii2-extension",
    "keywords": ["yii2", "algolia", "search"],
    "license": "MIT",
    "authors": [
        {
            "name": "Juuso Leinonen",
            "email": "leinonen.juuso@gmail.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "^2.0",
        "algolia/algoliasearch-client-php": "^1.25.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "mockery/mockery": "^0.9.4",
        "yiisoft/yii2-dev": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "leinonen\\Yii2Algolia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "leinonen\\Yii2Algolia\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts" : {
        "post-install-cmd" : [
            "cp -n phpunit.xml.dist phpunit.xml"
        ]
    }
}
